<rxui:ReactiveUserControl
    x:Class="OnPoint.WpfTestApp.MainView"
    x:TypeArguments="OPTest:MainVM"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rxui="http://reactiveui.net"
    xmlns:OPTest="clr-namespace:OnPoint.WpfTestApp"
    >
    <DockPanel>

        <ContentControl DockPanel.Dock="Top" Content="{Binding PeopleVM}" Height="200" />

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
            <Button x:Name="LoadNumbersButton" Style="{StaticResource TextButton}" />
            <Button x:Name="LoadLettersButton" Style="{StaticResource TextButton}" Margin="10,0,0,0" />
        </StackPanel>

        <UniformGrid Columns="2" Rows="1">

            <Border BorderBrush="Blue" BorderThickness="2" CornerRadius="4" Margin="10">
                <ContentControl Content="{Binding Content}" />
            </Border>

            <Border BorderBrush="Green" BorderThickness="2" CornerRadius="4" Margin="10">
                <ContentControl Content="{Binding Content2}" />
            </Border>
        </UniformGrid>

    </DockPanel>
</rxui:ReactiveUserControl>